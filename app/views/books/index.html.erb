<h1>Listing books</h1>

<table>
  <tr>
    <th>Account</th>
    <th>Subject</th>
    <th>Theme</th>
    <th>Title</th>
    <th>Occasion</th>
    <th>Question</th>
    <th>Extra</th>
    <th>Preface</th>
    <th>Dedication</th>
    <th>Epilogue</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.account.name %></td>
    <td><%= book.subject_name %></td>
    <td><%= book.theme.name %></td>
    <td><%= book.title %></td>
    <td><%= book.occasion %></td>
    <td><%= book.question %></td>
    <td><%= book.extra %></td>
    <td><%= book.preface %></td>
    <td><%= book.dedication %></td>
    <td><%= book.epilogue %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

