<h1>Listing contributions</h1>

<table>
  <tr>
    <th>Account</th>
    <th>Book</th>
    <th>Sig</th>
    <th>Extra</th>
    <th>Wisdom</th>
    <th>Invitation</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @contributions.each do |contribution| %>
  <tr>
    <td><%= contribution.account %></td>
    <td><%= contribution.book %></td>
    <td><%= contribution.sig %></td>
    <td><%= contribution.extra %></td>
    <td><%= contribution.wisdom %></td>
    <td><%= contribution.invitation %></td>
    <td><%= contribution.status %></td>
    <td><%= link_to 'Show', contribution %></td>
    <td><%= link_to 'Edit', edit_admin_contribution_path(contribution) %></td>
    <td><%= link_to 'Destroy', contribution, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

